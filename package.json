{
	"name": "cursor-code-prettifier",
	"displayName": "Cursor Code Prettifier",
	"publisher": "kazumasa",
	"version": "0.0.2",
	"description": "Replace LaTeX commands with symbols in the editor.",
	"engines": { "vscode": "^1.99.0" },
	"main": "./out/extension.js",
	"activationEvents": [
	  "onStartupFinished",
	  "onLanguage:latex",
	  "onLanguage:tex",
	  "onCommand:cursor-code-prettifier.helloWorld"
	],
	"contributes": {
	  "commands": [
		 { "command": "cursor-code-prettifier.helloWorld", "title": "Prettifier: Hello" }
	  ],
	  "configuration": {
		 "title": "Cursor Code Prettifier",
		 "properties": {
			"cursorCodePrettifier.enabled": { "type": "boolean", "default": true },
			"cursorCodePrettifier.substitutions": {
			  "type": "array",
			  "items": {
				 "type": "object",
				 "properties": {
					"original": { "type": "string" },
					"display": { "type": "string" }
				 },
				 "required": ["original","display"]
			  },
			  "default": []
			}
		 }
	  }
	},
	"scripts": {
	  "compile": "tsc -p ./",
	  "watch": "tsc -w -p ./"
	},
	"devDependencies": {
	  "typescript": "^5.9.2",
	  "@types/vscode": "^1.99.0",
	  "@types/node": "^20",
	  "@types/mocha": "^10.0.10"
	}
 }
 